<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="5dp"
    android:background="#7B718688"
    android:divider="@android:drawable/divider_horizontal_textfield"
    android:dividerHeight="1dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/itemNamePlaylistTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="3"
        android:gravity="center|left"
        android:padding="5dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/itemCountChannelsTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:gravity="center|center_vertical"
        android:padding="5dp" />

    <ImageButton
        android:id="@+id/settingPlaylistImageBut"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#00FEFCFC"
        android:contentDescription="Что-то"
        android:padding="5dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/icon_settings" />


</LinearLayout>