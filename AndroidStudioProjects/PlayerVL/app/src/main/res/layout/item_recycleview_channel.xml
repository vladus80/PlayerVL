<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_recyclerview_channel"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="1px"
    android:background="#3E3737"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/textViewNimberChan"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:gravity="center_horizontal|center_vertical"
        android:padding="2dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:layout_weight="0"
        android:padding="2dp" />

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="3"
        android:gravity="start|center_vertical"
        android:padding="2dp"
        android:textSize="12sp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/group_text_view"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="2"
        android:gravity="start|center_vertical"
        android:padding="2dp"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/btn_star_like"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="2dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/add_like"
        android:padding="5dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/star_empt"
        tools:visibility="visible" />

</LinearLayout>